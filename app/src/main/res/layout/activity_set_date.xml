<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/eggplant">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="43dp"
        android:fontFamily="@font/quicksand"
        android:text="@string/when_date"
        android:textColor="@color/whites"
        android:textSize="20dp" />

    <Button
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="17dp"
        android:width="150dp"
        android:height="50dp"
        android:background="@drawable/rounded_corner_thistle"
        android:fontFamily="@font/quicksand_medium"
        android:text="Date"
        android:textAlignment="center"
        android:textColor="@color/whites"
        android:textSize="20dp" />

    <Button
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/date"
        android:layout_below="@+id/date"
        android:layout_marginTop="12dp"
        android:width="150dp"
        android:height="50dp"
        android:background="@drawable/rounded_corner_thistle"
        android:fontFamily="@font/quicksand_medium"
        android:text="Time"
        android:textAlignment="center"
        android:textColor="@color/whites"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:layout_marginTop="182dp"
        android:fontFamily="@font/quicksand"
        android:text="@string/set_bail"
        android:textColor="@color/whites"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:layout_below="@+id/textView2" />

    <Spinner
        android:id="@+id/spinnerText"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonText"
        android:layout_alignStart="@+id/textView6"
        android:layout_marginBottom="35dp" />

    <Button
        android:id="@+id/buttonText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="31dp"
        android:width="150dp"
        android:height="50dp"
        android:background="@drawable/rounded_corner_thistle"
        android:fontFamily="@font/quicksand_medium"
        android:text="Done"
        android:textAlignment="center"
        android:textColor="@color/whites"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/spinnerText"
        android:layout_alignStart="@+id/spinner"
        android:fontFamily="@font/quicksand"
        android:text="Which message do you want to receive?"
        android:textColor="@color/whites"
        android:textSize="20dp" />

</RelativeLayout>